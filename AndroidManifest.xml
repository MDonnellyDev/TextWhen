<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mddev.l8text"
    android:versionCode="1"
    android:versionName="0.7" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:testOnly="false" >
        <activity
            android:name=".TextListViewer"
            android:label="@string/app_viewer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mddev.l8text.TextEditor"
            android:label="@string/app_editor" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.EMBED" />
            </intent-filter>
        </activity>

        <service
            android:name=".SmsService"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.EMBED" />
            </intent-filter>
        </service>
        <service
            android:name="com.mddev.l8text.AlarmService"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.EMBED" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.mddev.l8text.TextAlarmReceiver"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.odev.l8text.ACTION_SCHEDULED_ALARM_TEXT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>